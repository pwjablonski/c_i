<%= simple_form_for :conversation, url: :conversations do |f|%>
    <%= f.input :recipients, class: 'form-control'%>
    <%= f.input :subject, class: 'form-control' %>
    <%= f.input :body, as: :text, class: 'form-control'%>
    <%= f.button :submit, "Start Conversation", class: 'btn btn-primary'%>
    <%= f.button :submit, 'Cancel', type: :reset, class: 'btn btn-danger'%>
<%end%>