<div class="page-header ribbon-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
          <h1> C/I Schools</h1>        
     </div> 
    </div>
  </div>
</div>

<div class="container">
     <div class="row">

      <p id="notice"><%= notice %></p>

      <h1>Listing Schools</h1>

      <table>
        <thead>
          <tr>
            <th>School name</th>
            <th>School address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= link_to school.school_name, school %></td>
              <td><%= school.school_address %></td>
             
              <% if current_user.try(:admin?) %>
              <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Dont see your school?', new_school_path %>
  </div>

  </div>