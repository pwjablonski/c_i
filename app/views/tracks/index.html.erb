<div class="page-header ribbon-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h1>All Tracks</h1>
      </div> 
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div> 


  <!-- /.row -->
  <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                          <%= link_to tracks_path do %>
                            <i class="fa fa-sitemap fa-fw"></i> All Tracks
                          <%end%>
                        </li>
                        <li>
                          <%= link_to new_track_path do %>
                            <i class="fa fa-plus fa-fw"></i> New Track
                          <%end%>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>

          <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <% flash.each do |name, msg| -%>
                    <div class="alert alert-success alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <%= msg %> 
                    </div>
                    <%end%>
                </div>
                <!-- /.col-lg-12 -->
            </div>
               
            <div class="row">
              <% @tracks.each do |track| %>  
                  <div class="col-lg-12"> 
                     <div class="panel panel-default">
                      <div class="panel-body panel-event">
                          <h3> <%= link_to track.name, track %></h3>
                          <%= link_to 'Edit', edit_track_path(track) %>
                          <%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </div>
                  </div> 
                <% end %>
              </div>
           
          </div>
