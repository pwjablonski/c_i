  <div class="page-header ribbon-top">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
            <h1>All Students</h1>        
       </div> 
      </div>
    </div>
  </div>

  <div class="container">

        <div class="row">

          <p id="notice"><%= notice %></p>
          <div class="col-md-10"> 
            <%= search_form_for @q, :html => {:class => "form-inline"} do |f| %>
              <div class="form-group"> 
            <%= f.submit "Search Students", :class => 'btn btn-primary' %>
            </div>


             <div class="form-group"> 
            <%= f.search_field :first_name_cont, :autofocus => true, class: 'form-control', :placeholder => "Search for an student..."  %>
            </div>
           
            <% end %>
          </div>
          <div class="col-md-2"> 
            <%= sort_link(@q, :last_name, 'Sort By last_name') %>
          </div>
          <%= paginate @students %>
        </div>

        <div class="row">
          <% @students.each do |student| %>
               
                  <div class="col-lg-3"> 
                     
                     <div class="panel panel-default">
                      <%= link_to student do %>
                      <div class="panel-body panel-project">
                        <%= image_tag student.user.image, :class => "img-circle img-responsive panel-img-user" %>
                        <h4><%= student.first_name %> <%= student.last_name %></h4>
                        <p> <%= student.school.school_name %> </p>
                        <p> <%= student.ca_data.last.total_points%> Points on CA </p>
                        <p> <%= student.projects.count%> Projects : <%= student.events.count%> Events</p>
                      </div>
                      <%end%>
                      <div class="panel-footer">
                        <a href='https://github.com/<%=student.github_username%>' class="btn btn-social-icon btn-github">
                            <span class="fa fa-github"></span>
                        </a>

                        <a href='https://www.codecademy.com/<%=student.codecademy_username %>' class="btn btn-social-icon btn-instagram">
                            <span class="fa fa-code"></span>
                        </a>

                        <a href='https://devpost.com/<%=student.github_username%>' class="btn btn-social-icon btn-reddit">
                          <img src = "http://nealrs.github.io/devpost-follow-button/icon/devpost-32.png">        
                        </a>
                      </div>
                    </div>
                    
                  </div> 
             
            <% end %>
          
          
          <!-- <h3>Import a CSV File</h3>
            <%= form_tag import_students_path, multipart: true do %>
              <%= file_field_tag :file %>
              <%= submit_tag "Import CSV" %>
          <% end %> -->
      </div>
  </div>


