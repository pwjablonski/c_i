<% flash.each do |name, msg| -%>
     <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= msg %> 
     </div>
    <%end%>


<div class="form-block">

<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :id => "username" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :id => "password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field" >
      <%= f.check_box :remember_me, :id => "check_box"%>
      <%= f.label :remember_me%>
    </div>
  <% end -%>

  <div class="actions">
     <%= f.submit "Log in", :id => "submit" %> 
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

