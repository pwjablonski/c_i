  <div class="container-fluid">
      <div class="row">
        
          <%= render 'layouts/sidebar' %>
       
        
        
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1>C/I Classrooms</h1>

          <p id="notice"><%= notice %></p>
              

              <% @classrooms.each do |classroom| %>
                <div class="card classroom-card">
                  <h3><%=classroom.name%></h3>
                  <%= link_to image_tag('speech-bubble-3-128.png'), classroom%>
                  <h6> Teacher: <%=classroom.teacher.last_name%></h6>
                  
                  <% if current_user.try(:student?)%>
                    <%= button_to 'Enroll', enrollment_path(classroom_id: classroom) %>
                  <%end%>
<!--
                  <% if classroom.teacher.user == current_user || current_user.try(:admin?)%>
                    <p><%= link_to 'DELETE', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                  <% end %>
                  -->
                </div>
                
              <% end %>
            </div>
            
            
          </div>
        </div>
      </div>




