<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
  <div class="field form-goup">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>
  
  <div class="field form-goup">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-goup">
    <%= f.label :start_time %><br />
    <div class='input-group date' id='datetimepicker1'>
      <%= f.text_field :start_time, autofocus: true, :class => "form-control" %>
      <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <div class="field form-goup">
    <%= f.label :end_time %><br />
    <div class='input-group date' id='datetimepicker2'>
    <%= f.text_field :end_time, autofocus: true, :class => "form-control" %>
    <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

 <div class="field form-goup">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "ckeditor" %>
  </div>
  <div class="field form-goup">
    <%= f.radio_button :registration_type, 'open', :checked => true  %> 
    <%= label :registration_type, 'open' %>
    <%= f.radio_button :registration_type, 'invite_only'   %>
    <%= label :registration_type, 'Invite Only' %>
  </div>

  <div class="actions">
    <%= f.submit "Save Event", :class => "btn btn-primary" %>
  </div>

  </div>
  <div class="col-md-6">
  <div class="field form-goup">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, :class => "form-control" %>
  </div>

   <div class="field form-goup">
    <%= f.label :header_image %><br>
    <%= f.text_field :header_image, :class => "form-control" %>
  </div>

<div class="field form-goup">
    <%= f.label :permission_url %><br>
    <%= f.text_field :permission_url, :class => "form-control" %>
  </div>

  <!-- <div class="field form-goup">
    <%= f.label :num_tickets %><br>
    <%= f.text_field :num_tickets, :class => "form-control" %>
  </div> -->

  </div>

  
<% end %>
