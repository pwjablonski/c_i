<div class="page-header ribbon-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
          <h1> C/I Events </h1>
     </div> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col-lg-12"> 
    <%= search_form_for @q do |f| %>
     <div class="form-group"> 
    <%= f.search_field :name_cont, :autofocus => true, class: 'form-control', :placeholder => "Search for an event..."  %>
    </div>
<div class="form-group"> 
    <%= f.submit "Search Events", :class => 'btn btn-primary' %>
    </div>
    <% end %>

    <% if current_user.try(:admin?) || current_user.try(:teacher?)%>
    <h3>-OR-</h3>
    <h3>  <%= link_to "Create a New Event", new_event_path, :class => "btn btn-primary"%> </h3>
    <% end%> 
  </div>
  
  <% @events.each do |event| %>
    
      <div class="col-lg-3"> 
         
         <div class="panel panel-default">
          <%= link_to event do %>
          <div class="panel-body panel-project">
            <h3><%= event.name%></h3>
            <p><%= event.start_time %> </p>
            
          </div>
          <%end%>
          <div class="panel-footer">
            Event
          </div>
        </div>
        
      </div> 
  <% end %>
  </div>
</div>
