<div class="page-header ribbon-top">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
          <h1> C/I Events </h1>
     </div> 
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <div class="col-lg-10"> 
      <%= search_form_for @q, :html => {:class => "form-inline"} do |f| %>
        <div class="form-group"> 
      <%= f.submit "Search Events", :class => 'btn btn-primary' %>
      </div>


       <div class="form-group"> 
      <%= f.search_field :name_cont, :autofocus => true, class: 'form-control', :placeholder => "Search for an event..."  %>
      </div>
     
      <% end %>
    </div>

    <div class = "col-lg-2">
      <% if current_user.try(:admin?) || current_user.try(:teacher?)%>
    
      <%= link_to "Create a New Event", new_event_path, :class => "btn btn-primary"%>
      <% end%> 
    </div>
  </div>
  
  <div class="row">
  
  <% @events.each do |event| %>
    
      <div class="col-lg-3"> 
         
         <div class="panel panel-default">
          <%= link_to event do %>
          <div class="panel-body panel-project">
            <h3><%= event.name%></h3>
            <p><%= event.start_time %> </p>
            
          </div>
          <%end%>
          <div class="panel-footer">
            Event
          </div>
        </div>
        
      </div> 
  <% end %>
  </div>
</div>
