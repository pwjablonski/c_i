      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-6">
  <div class="field form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
  </div>
  
  <div class="field form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :profile_name %><br />
    <%= f.text_field :profile_name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :about_me %><br>
    <%= f.text_area :about_me, :class => "form-control" %>
  </div>

  <div class="field form-group">
      <%= f.label :school %><br>
      <%= f.collection_select :school_id, School.all, :id, :school_name, :class => "form-control select2-tag" %>  
  </div>

  <div class="actions form-group">
    <%= f.submit "Save Profile", :class => "btn btn-primary" %>
  </div>

</div>
<div class="col-md-6">
  <div class="field form-group">
    <%= f.label :codecademy_username %><a href="www.codacademy.com"> Sign Up/Visit Codacademy </a><br>
    <%= f.text_field :codecademy_username, :class => "form-control" %>
  </div>

