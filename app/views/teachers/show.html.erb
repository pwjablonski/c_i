<div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active">  <%= link_to 'My Page', @user %> </li>
            <% if current_user == @teacher.user%>
              <li>  <%= link_to 'Edit My User', edit_teacher_path %> </li>
            <% end %>
          </ul>  
          <ul class="nav nav-sidebar">
            <%= render 'layouts/sidebar' %>
          </ul>
        </div>
        
        
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          
          <h1>My Page</h1>
          <p id="notice"><%= notice %></p>

            <p>
              <strong>Name:</strong>
              <%= @teacher.first_name + " " + @teacher.last_name %>
            </p>
            
            <p>
              <strong>Email:</strong>
              <%= @teacher.user.email %>
            </p>

            <p>
              <strong>School:</strong>
              <%= link_to @teacher.school.school_name, @teacher.school %>
            </p>

            <p>
              <strong>Github:</strong>
              <a href='https://github.com/<%=@teacher.github_username%>'> <%= @teacher.github_username%></a>
            </p>
            <p>
              <strong>Codecademy:</strong>
              <a href='https://www.codecademy.com/<%=@teacher.codecademy_username %>'> <%= @teacher.codecademy_username %></a>
            </p>

          <% if current_user.try(:admin?) || current_user == @teacher.user%> 
          <%= link_to "Edit Teacher Profile", edit_teacher_path(@teacher)%>
          <%end%>


          <h1>Classrooms</h1>
              <div class="card classroom-card">
               <div>
                 
                 <img src="http://www.iconsdb.com/icons/preview/orange/plus-5-xxl.png" alt="Add Classroom" height="100" width="100" id="plus-button">    
               
               </div>

               <h4><%= link_to 'New Classroom', new_classroom_path %></h4>
              </div>
              
              <% @teacher.classrooms.each do |classroom| %>
                <div class="card classroom-card">
                  <h3><%=classroom.name%></h3>
                  <a href="/classrooms/<%= classroom.id %>">
                    <!--<img src="http://<%= classroom.name %>-pond.jpg.to/" alt="Class Picture" height="200" width="300">  -->
                    <img src="http://mapssedu.net/images/iconInstruction-01.png" alt="Class Picture" height="100" width="100">
                    
                  </a>
                  <!--<p><%= link_to 'Show', classroom %></p>-->
                  <!--<p><%= link_to 'Edit', edit_classroom_path(classroom) %></p>-->
                  
                  <% if current_user.try(:admin?) || current_user == @teacher.user%> 
                  <p><%= link_to 'DELETE', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                  <%end%>
                  
                </div>
              <% end %>
            </div>
            
            
          </div>
        </div>
      </div>
    </div>

<%= link_to 'Edit', edit_teacher_path(@teacher) %> |
<%= link_to 'Back', teachers_path %>
